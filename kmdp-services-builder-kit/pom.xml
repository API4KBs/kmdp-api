      <plugin>

        <groupId>edu.mayo.kmdp</groupId>
        <artifactId>configurable-archetype-plugin</artifactId>
        <version>${project.version}</version>

        <configuration>
          <archetypeCatalog>local</archetypeCatalog>
          <archetypeArtifactId>kmdp-openapi-spring-service-archetype</archetypeArtifactId>
          <archetypeGroupId>edu.mayo.kmdp</archetypeGroupId>
          <archetypeVersion>${project.version}</archetypeVersion>
          <interactiveMode>${interact}</interactiveMode>
          <basedir>..${s}kmdp-services</basedir>
        </configuration>

        <executions>
          <execution>
            <id>gen-repo</id>
            <goals>
              <goal>generate</goal>
            </goals>
            <phase>initialize</phase>
            <configuration>
              <propertyFile>${project.basedir}${s}properties${s}repository.properties</propertyFile>
            </configuration>
          </execution>
          <execution>
